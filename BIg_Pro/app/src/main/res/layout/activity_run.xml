<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/run2"
    android:id="@+id/bglayout"
    tools:context="com.example.caixindong.big_pro.Fragment.Module1.RunActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/relativeLayout"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="100.00"
            android:id="@+id/diatance_label"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="80sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/km"
            android:id="@+id/textView8"
            android:layout_toRightOf="@+id/diatance_label"
            android:layout_alignBaseline="@+id/diatance_label"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignEnd="@+id/relativeLayout"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用时："
            android:id="@+id/textView9"
            android:textSize="20sp"
            android:layout_marginStart="71dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="11&apos;11&apos;&apos;"
            android:id="@+id/time_label"
            android:layout_marginEnd="68dp"
            android:layout_alignBottom="@+id/textView9"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout"
        android:id="@+id/linearLayout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="速度："
            android:id="@+id/textView10"
            android:textSize="20sp"
            android:layout_alignBaseline="@+id/speed_label"
            android:layout_alignBottom="@+id/speed_label"
            android:layout_alignParentStart="true"
            android:layout_marginStart="71dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="34m/s"
            android:id="@+id/speed_label"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="68dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="步数："
            android:id="@+id/textView13"
            android:textSize="20sp"
            android:layout_alignTop="@+id/step_count_label"
            android:layout_alignParentStart="true"
            android:layout_marginStart="71dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/step_count_label"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="68dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignEnd="@+id/linearLayout3"
        android:id="@+id/linearLayout4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="卡路里："
            android:id="@+id/textView15"
            android:textSize="20sp"
            android:layout_alignTop="@+id/kcal_label"
            android:layout_alignParentStart="true"
            android:layout_marginStart="71dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:layout_gravity="center"
            android:id="@+id/kcal_label"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="68dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout4"
        android:layout_alignParentStart="true">


        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="开始"
            android:id="@+id/startbutton"
            android:textColorHighlight="#ffffff"
            android:textColor="#ffffff"
            android:background="@drawable/shape2"
            android:onClick="onClick"
            android:layout_marginStart="30dp"
            android:layout_alignTop="@+id/stopbutton"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="结束"
            android:id="@+id/stopbutton"
            android:textColor="#ffffff"
            android:background="@drawable/shape3"
            android:onClick="onClick"
            android:layout_marginEnd="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="暂停"
            android:id="@+id/pauseBtn"
            android:textColor="#ffffff"
            android:visibility="invisible"
            android:onClick="onClick"
            android:background="@drawable/shape4"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <Button
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:id="@+id/showmapBtn"
        android:background="@drawable/dingwei"
        android:onClick="onClick"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <com.amap.api.maps2d.MapView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map"
        android:visibility="invisible">

    </com.amap.api.maps2d.MapView>
    <Button
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:id="@+id/closemapBtn"
        android:visibility="invisible"
        android:onClick="onClick"
        android:background="@drawable/map_close"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
